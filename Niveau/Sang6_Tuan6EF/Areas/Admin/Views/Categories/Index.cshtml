@model IEnumerable<Niveau.Areas.Admin.Models.Products.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Category</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <a href="@Url.Action("Create")" class="btn btn-primary m-2"><i class="fa-solid fa-plus"></i> Create New</a>
        <a asp-controller="Products" asp-action="List" class="btn btn-primary m-2">Product</a>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>

                    <a class="btn btn-success" asp-action="Details" asp-route-id="@product.Id"><i class="fa-solid fa-eye"></i> View</a> |

                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@product.Id"><i class="fa-solid fa-pen-to-square"></i> Edit</a> |

                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id"><i class="fa-solid fa-trash"></i> Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
