            var quantity = 1;

            $.ajax({
                url: '@Url.Action("AddToCart", "ShoppingCart", new { area = "User" })', // Make sure this URL is rendered correctly
                type: 'POST',
                data: { productId: productId, quantity: quantity },
                success: function () {
                    toastr.success("Thêm giỏ hàng thành công.", "", {
                        timeOut: 2000,
                        progressBar: true,
                        closeButton: true
                    });
                },
