<script>
    $(document).ready(function () {
        // Bind click event to the search button
        $('#searchbtn').on('click', function (event) {
            event.preventDefault();  // Prevent the default form submission

            var searchTerm = $('#productSearch').val();
            $.ajax({
                url: '@Url.Action("Search", "Products", new { area = "Admin" })', // Verify the correct URL
                type: 'GET',
                data: { page: 1, searchTerm: searchTerm },
                success: function (data) {
                    console.log("Data received:", data);
                    $('#ProductContainer').html(data);
                },
                error: function () {
                    alert('Error searching products.');
                }
            });
        });

        // Optional: Trigger search on input change after a delay
        $('#productSearch').on('input', function () {
            clearTimeout(this.delay);
            this.delay = setTimeout(function () {
                $(this).trigger('search');
            }.bind(this), 1100); // Reduced delay for faster response
        }).on('search', function () {
            $('#searchbtn').click();
        });
    });
</script>
