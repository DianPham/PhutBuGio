@model ResetPassword
@using Niveau.Areas.Admin.Models;
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Areas/User/Views/Shared/_AuthorizeLayout.cshtml";
}

<h1 class="text-black">Reset Password</h1>
<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="ResetPassword" method="post">
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <input type="hidden" asp-for="Email" class="form-control" />
    <input type="hidden" asp-for="Token" class="form-control" />
    <button class="btn btn-primary" type="submit" asp-area="Admin" asp-controller="Accounts" asp-action="ResetPasswordConfirmation">Submit</button>
</form>