@model IEnumerable<Niveau.Areas.Admin.Models.ApplicationUser>
@using Microsoft.AspNetCore.Identity
@using Niveau.Areas.Admin.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Account List</h2>

<table class="table">
    <a asp-area="Identity" asp-page="/Account/Register class="btn btn-primary m-2">Create New</a>
    <thead>
        <tr>
            <th>Id</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <!-- Add more columns if needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.Id</td>
                <td>@account.FirstName</td>
                <td>@account.LastName</td>
                <td>@account.Email</td>
                <td>

                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@account.Id">View</a> |

                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@account.Id">Edit</a> |

                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@account.Id">Delete</a>

                </td>
                <!-- Add more columns if needed -->
            </tr>
        }
    </tbody>
</table>

