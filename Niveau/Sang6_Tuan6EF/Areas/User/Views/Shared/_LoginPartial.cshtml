@using Microsoft.AspNetCore.Identity
@using Niveau.Areas.Admin.Models.Accounts;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole("Admin"))
        {
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-item nav-link">Admin Panel</a>
        }

        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" @* asp-area="User" asp-page="/Account/Manage/Index" *@ title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="User" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" href="/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" href="/Login">Login</a>
        </li>
    }
</ul>
